extends layout

block content
  div.container
    div.content
       form.form-horizontal(method="post", enctype="multipart/form-data", id="filterForm", name="filterForm", action="/graph")
         fieldset
           legend Filter
         div.control-group
           label.view  Depuis le:
             input.span(id="date1", type="text", name="date1", placeholder="Starting date", size="10", value=date1)
           label.view  Au:
             input.span(id="date2", type="text", name="date2", placeholder="Ending date", size="10", value=date2)
           label.view  Country:
             select(name="country")
                option
                option FR
                option ES
           label.view  Desc:
             input.span(id="desc", type="text", name="desc", placeholder="description", size="12", value=desc)
           label.view
           input.btn(type="submit", value="Proceed >>", class="btn btn-large btn-primary")
         p
  div.container
    div.content
      fieldset
        legend Graph
        div.graph_salaire(id="graph_salaire")
        div.graph_salaire(id="graph_salaire1")
        div.graph_salaire(id="graph_salaire2")

  include inc/footer

  // Highcharts Libraries
  script(src='/Highcharts/js/highcharts.js')
  script(src='/Highcharts/js/modules/data.js')
  script(src='/Highcharts/js/modules/exporting.js')
  // My Library
  script(src='/javascripts/ui_graph.js')
